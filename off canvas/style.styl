@import "nib"
*
	margin 0
	padding 0
html
	font-family Arial
.color_A
	background aqua
.color_B
	background yellow
.color_C
	background red
.Canvas
	// overflow hidden
	// position relative
	&-main
		overflow hidden
	&-sidebar
		width 200px
		position absolute
		right -200px
		top 0
		-webkit-transition 1s
		&.is-active
			right 0
.Header
	background-color #071010
	padding 30px
	color white
	font-size 1.5em
	overflow hidden
	&-logo
		text-transform uppercase
		font-weight normal
		text-decoration underline
		text-shadow 0 0 10px lightgray
	&-button
		background-color orange
		cursor pointer
		color white
		padding 15px
		border-radius 10px
		border none
		position absolute
		right 20px
		top 30px
		display none
		&.is-active
			display block
.MainMenu
	display none
	background-color black
	padding 0
	width 200px
	position absolute
	left -200px
	top 0
	transition .1s
	&.is-active
		transition .5s
		display block
		left 0
	&__item
		list-style none
		text-align center
	&__link
		color white
		text-decoration none
		display block
		padding .3em .5em
		transition .5s
		&:hover
			background-color lightgray
@media screen and (min-width 767px)
	.MainMenu
		display inline-block
		text-align center
		left initial
		top 30px;
		width auto
		right 20px
		background-color: transparent;
		&.is-active
			left initial
		&__item
			display inline-block
	.Header
		&-button
			display none
	.Header-button.is-active
		display none