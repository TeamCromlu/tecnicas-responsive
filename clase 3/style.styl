@import "normalize.styl"
*
  margin 0
  padding 0

html
  font-family Arial

body
  background-color lightgray

.header__main
  background-color orange
  padding 25px
  text-align center

.col1
  background-color yellow

.col2
  background-color peru
.col3
  background-color aqua
.col1 p
.col2 p
.col3 p
  text-align justify
  padding 15px
.box-img
  img
    max-width 100%
// adaptando el video
.video-res
  height 0
  padding-bottom 56.25%
  overflow hidden
  position relative
iframe,
object,
embed,
video
  width 100%
  height 100%
  position absolute
  right 0
  left 0
@media screen and (min-width 768px)
    .col1
      float left
    .col2
    .col3
      float right
    .col1
      width 30%
    .col2
      width 70%
    .col3
      width 70%
@media screen and (min-width 1068px)
    .mostly
      max-width 1000px
      margin 0 auto
    .col1
      float left
    .col2
    .col3
      float right
    .col1
      width 30%
    .col2
      width 70%
    .col3
      width 70%
